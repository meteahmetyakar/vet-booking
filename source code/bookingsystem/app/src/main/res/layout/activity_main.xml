<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:theme="@style/Theme.Randevusistemi"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:gravity="center|top"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="384dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Booking Information"
                android:textColor="#A4000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameTxt"

                    android:layout_width="167dp"


                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Name                     :"
                    android:textColor="#A4000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/nameTxtBox"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:backgroundTintMode="src_in"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#A4000000"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Phone Number    :"
                    android:textColor="#A4000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phoneTxtBox"
                    android:layout_width="204dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:backgroundTintMode="src_in"
                    android:inputType="phone"
                    android:textColor="#A4000000"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/petTypeText"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Animal                   :"
                    android:textColor="#A4000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/petTypeTxtBox"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:backgroundTintMode="src_in"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#A4000000"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/operationText"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Process To Do     :"
                    android:textColor="#A4000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/operationTxtBox"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:backgroundTintMode="src_in"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#A4000000"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Date                      :"
                    android:textColor="#A4000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="206dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#A4000000"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <FrameLayout
            android:layout_width="348dp"
            android:layout_height="290dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:unfocusedMonthDateColor="#000000"
                android:weekSeparatorLineColor="#873838" />

            <LinearLayout
                android:id="@+id/mainLinear"
                android:layout_width="317dp"
                android:layout_height="261dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <Button
                    android:id="@+id/button11"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/backbtn"
                    android:backgroundTint="#EDFFFFFF"
                    android:backgroundTintMode="multiply"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@color/btnColor"
                        android:text="10:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/btnColor"
                        android:text="11:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/btnColor"
                        android:text="12:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@color/btnColor"
                        android:text="13:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/btnColor"
                        android:text="14:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/btnColor"
                        android:text="15:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button8"
                        style="@android:style/Widget.Material.Button"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@color/btnColor"
                        android:text="16:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/btnColor"
                        android:text="18:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/btnColor"
                        android:text="17:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/reserveBtn"
                        android:layout_width="131dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="11dp"
                        android:background="@color/btnColor"
                        android:text="Book Now"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>